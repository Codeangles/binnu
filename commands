// Ssh generating
ls -a -l ~/.ssh
ssh-keygen -t rsa -b 4096 -c "kallamvenky@gmail.com"
eval $(ssh-agent -s)
ssh-add -k ~/.ssh/id_rsa

to get key
cat ~/.ssh/id_rsa.pub

to test ssh connection to github server
ssh -T git@github.com
then type yes

